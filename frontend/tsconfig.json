{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@pages/*": ["pages/*"],
      "@sanity-api/*": ["/sanity-api/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
